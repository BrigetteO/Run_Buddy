<%= render 'home_nav' %>

<div class="container">
    <% @runs.each do |run| %>
      <div class="run-index">
        <div class="run-top">
          <span class="left bold"><%= run.title %></span>
          <span class="right italic"><%= run.user.user_name %></span><br>
        </div>
        <span class="inline italic"><%= run.comments.count %> comments</span  >
        <span class="inline italic"><%= link_to new_run_comment_path(run) do %><i class="fa fa-comments" aria-hidden="true"></i><% end %></span> |
        <span class="inline italic"><%= run.kudos.count %> kudos</span>
        <span class="inline italic"><%= link_to run_kudos_path(run), method: :post do %><i class="fa fa-thumbs-up" aria-hidden="true"></i><% end %></span>
      </div>
    <% end %>
    <%= will_paginate @runs %>
</div>