<p id="notice"><%= notice %></p>

<h1>Runs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Location</th>
      <th>Date</th>
      <th>Time</th>
      <th>Miles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.user_id %></td>
        <td><%= run.title %></td>
        <td><%= run.location %></td>
        <td><%= run.date %></td>
        <td><%= run.time %></td>
        <td><%= run.miles %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Run', new_run_path %>
<%= link_to 'Profile', current_user %>
