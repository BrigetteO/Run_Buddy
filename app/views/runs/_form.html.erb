<%= simple_form_for(@run) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, required: true, autofocus: true %>
    <%= f.input :location, label: false, required: true, autofocus: true %>
    <%= f.input :miles, label: false, required: true, autofocus: true %>
    <%= f.input :date, required: true, autofocus: true %>
    <%= f.input :time, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>

<% end %>
