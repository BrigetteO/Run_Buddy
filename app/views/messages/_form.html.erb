<%= simple_form_for (@message), url: message_path, method: :post, action: :create do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, as: :text, input_html: {rows: 10, cols: 10}, label: false, placeholder: "Message...", required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send message" %>
  </div>

<% end %>
