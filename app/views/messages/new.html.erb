<div class="container">

<h1>New Message</h1>

<%= simple_form_for [@recipient, @message] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder: "Title", required: true, autofocus: true %>
    <%= f.input :content, as: :text, input_html: {rows: 10, cols: 10}, label: false, placeholder: "Message...", required: true, autofocus: true %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send" %>
  </div>

<% end %>
</div>