<h1>Hi!</h1>
<div class="myBackground">
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Location</th>
      <th>Miles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.runs.each do |run| %>
      <tr>
        <td><%= run.convert_date %></td>
        <td><%= run.title %></td>
        <td><%= run.location %></td>
        <td><%= run.miles %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
