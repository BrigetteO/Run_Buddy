<div class="container">
<h1>Login</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, placeholder: "Email", required: false, autofocus: true %>
    <%= f.input :password, label: false, placeholder: "Password", required: false %>
    <%= f.input :remember_me, as: :boolean, inline_label: true, label: false if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Login" %>
  </div>
<% end %>

<p><%= render "devise/shared/links" %></p>
</div>