<%= simple_form_for (@comment), url: run_comments_path, method: :post, action: :create do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, as: :text, label: false, placeholder: "Comment...", required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit" %>
  </div>

<% end %>
